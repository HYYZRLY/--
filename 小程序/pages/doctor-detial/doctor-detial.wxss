.imgBox{
  position: relative;
  height: 310rpx;
  margin: 50rpx 0;
}
.img {
  width: 240rpx;
  height: 310rpx;
  border-radius: 16rpx;
  position: absolute;
  left: 50%;
  margin-left: -120rpx;
}
.content{
  margin: 20rpx;
  font-size: 32rpx;
  color: rgb(104, 101, 101);
}
.t{
  font-size: 34rpx;
  font-weight: bold;
  color: #353434;
}
.doctor{
  text-align: center;
  font-size: 40rpx;
  color: #00978E;
  margin-bottom: 10rpx;
}
.departmentBox{
  width: 250rpx;
  margin: 0 auto;
  text-align: center;
  margin-bottom: 80rpx;
}
.titles{
  float: left;
  margin-left: 30rpx;
}
.introduction{
  margin-top: 10rpx;
  margin-left: 70rpx;
}
.timeBox{
  margin-top: 50rpx;
  position: relative;
}
.week{
  display: inline-block;
  border: solid 1px #999;
  font-size: .9rem;
  padding: 0 10rpx;
  margin: 0 0 0 20rpx;
  border-radius: 10rpx;
  margin-top: 20rpx;
  margin-left: 70rpx;
}
.num{
  float: left;
  margin-left: 300rpx;
  margin-top: -50rpx;
}
.register{
  float: left;
  margin-left: 570rpx;
  margin-top: -50rpx;
  font-size: 28rpx;
  border: solid 1px #00978E;
  color: #00978E;
  border-radius: 8rpx;
  padding: 4rpx 10rpx;
}