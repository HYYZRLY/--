/* pages/my-register/index.wxss */.notice {
  width: 90%;
  margin: 25rpx auto;
  line-height: 32rpx;
  font-size: 28rpx;
  color: #2B333B;
  font-weight: bold;
  min-height: 300rpx;
}
.notice-list {
  display: block;
  padding: 24rpx 40rpx 36rpx;
  background-color: #f4f4f4;
  border-radius: 8rpx;
  margin-top: 20rpx;
}

.notice-more {
  position: relative;
  padding-right: 26rpx;
  font: 24rpx/24rpx -apple-system-font, system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, Noto Sans, sans-serif, Helvetica Neue, PingFang SC, Hiragino Sans GB, Microsoft YaHei UI, Microsoft YaHei, Arial;
  color: #999;
  margin-top: 30rpx;
}
.box{
  display: inline-block;
  border: solid 1px red;
  font-size: 24rpx;
  color: red;
  padding: 0 8rpx;
  margin: 0 0 0 20rpx;
  border-radius: 5rpx;
}
.add_time{
  font-size: 24rpx;
  color: #999;
  float: right;
}
.line{
  width: 100%;
  height: 2rpx;
  margin-top: 10rpx;
  background-color: #999;
}
.message-box{
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #2B333B;
}
.message-box view{
  margin-top: 15rpx;
}
.message-notice{
  font-size: 24rpx;
  color: rgb(247, 103, 103);
}
.message-pay{
  margin-top: 50rpx;
  color: red;
  font-size: 30rpx;
  padding: 10rpx 8rpx;
  margin-left: 450rpx;
}