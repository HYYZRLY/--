textarea {
  width: 680rpx;
  min-height: 500rpx;
  margin-left: 25rpx;
  margin-right: 10rpx;
  margin-top: 30rpx;
  border-radius: 5rpx;
  box-shadow: 0 4rpx 40rpx rgb(0 0 0 / 10%);
}

.textarea-bg {
  /* background-color: #eee; */
  padding: 10rpx;
  font-size: 32rpx;
}
.son_view{
  margin-top: 50rpx;
}
.title-bg {
  font-size: 32rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  margin-top: 20rpx;
  color: #6cc6cb;
  text-align: center;
}

.btn {
  /* display: inline-block; */
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 50rpx;
  padding: .5em 1em;
  background: transparent;
  border: 2px;
  border-radius: 3px;
  /* font-weight: 400; */
  text-align: center;
  box-shadow: 0px 2px 4px #eae5c9, 0px 1px 2px #6cc6cb;
  background: -webkit-linear-gradient(left, #eae5c9, #6cc6cb);
}


